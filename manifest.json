{
  "name": "Test Screenshot Extension",
  "version": "1.3",
  "description": "Demonstrate screenshot functionality in the chrome.tabs api.",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "camera.png",
    "default_title": "shot!"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>"
  ],
  "manifest_version": 2
}
